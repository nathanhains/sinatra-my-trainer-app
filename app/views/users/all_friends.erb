<%@user.friends.each do |friend|%>
<%account = User.find_by(id: friend.friend_id)%>
<%end%>


<div class = "container text-center py-5">
    <h1 class="display-4"><%=@user.username%>'s Friends:</h1>
    </div>
    <div class = "containter text-center">
        <div class="row">
            <%@user.friends.each do |friend|%>
            <%account = User.find_by(id: friend.friend_id)%>
            <div class="col">
                <div class ="card">
                <div class="card-header">
                    <h4><a class="btn btn-lg btn-secondary" href="/users/<%=account.slug%>"><%=account.username%></a></h4>
                </div>
                <div class="card-body">
                    <h1 class="my-0 font-weight-normal">Total Exercises:
                    <small class="text-muted"><%=account.exercises.count%></small></h1>
                    <ul class="list-unstyled mt-3 mb-4">
                        <br>
                        <li>Total Likes: <%=account.likes.count%></li>
                    </ul>
                </div>
            </div>
            <%end%>
                            
            </div>
        </div>
    </div>