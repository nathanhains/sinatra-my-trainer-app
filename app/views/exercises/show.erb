    <div class = "container-sm text-center">
        <div class="row">
            <div class="col">
                <div class ="card">
                <div class="card-header">
                    <h4><%=@exercise.name%></h4>
                    <%if authorized?(@exercise)%>
                    <a class = "btn btn-sm btn-secondary" href="/exercises/<%=@exercise.id%>/edit">Edit</a>
                    <%end%>
                </div>
                <div class="card-body">
                    <h1 class="my-0 font-weight-normal">Target Muscle/
                    <small class="text-muted"><%=@exercise.muscle_group%></small></h1>
                    <ul class="list-unstyled mt-3 mb-4">
                        <li><%=@exercise.sets%> sets</li>
                        <li><%=@exercise.reps%> reps</li>
                        <li><%=@exercise.description%></li>
                        <br>
                        <li><a class="btn btn-sm btn-secondary"href="/users/<%=@exercise.user.slug%>">Created By: <%=@user.username%></a></li>
                    </ul>
                </div>
            </div>          
            </div>
        </div>
    </div>







